<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="colorAccent">@color/light_colorAccent</item>
        <item name="fragment_background">@color/c_white</item>
        <item name="titleBoldColor">@color/dark_colorPrimary</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="MovieTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/titleBoldColor</item>
    </style>

    <style name="MovieDetailBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/titleBoldColor</item>
    </style>

    <style name="MovieSubTextNoBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/titleBoldColor</item>
    </style>

    <style name="MovieTitleWithOutTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/c_white</item>
    </style>
</resources>
