<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="colorAccent">@color/light_colorAccent</item>
        <item name="fragment_background">@color/c_white</item>
        <item name="titleBoldColor">@color/dark_colorPrimary</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="fragment_background">@color/dark_fragment_background</item>
        <item name="titleBoldColor">@color/c_white</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Home">
        <item name="android:windowExitTransition">@transition/grid_exit</item>
        <item name="android:windowReenterTransition">@transition/grid_reenter</item>
    </style>

    <style name="MovieTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/titleBoldColor</item>
    </style>

</resources>
